{
  "manifest_version": 3,
  "name": "Pokeking Translator",
  "version": "4.3.1",
  "description": "Auto-replaces keywords on Pokeking site. Can be activated on other sites manually.",
  "icons": {
    "16": "icons/slax16.png",
    "48": "icons/slax48.png",
    "128": "icons/slax128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.pokeking.icu/*",
    "<all_urls>" 

  ],
  "content_scripts": [
    {
      "matches": ["*://*.pokeking.icu/*"], 
      "js": ["browser-polyfill.min.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dictionary.json", "injected_script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
    "id": "pokeking-translator-jassimp-ww@github.com",
    "strict_min_version": "120.0"
  }
  }
}